RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f

#RewriteRule ^del/cities/:([^./]+)/([^./]+)/:([^./]+)$ public/api.php?action=del&id=$1&$2=$3 [QSA,L]
#RewriteRule ^post/cities/:([^./]+)/([^./]+)$ public/api.php?action=post&id=$1&type=$2 [QSA,L]
#RewriteRule ^del/cities/:([^./]+)/([^./]+)$ public/api.php?action=del&id=$2&type=$3 [QSA,L]
#RewriteRule ^del/cities/:([^./]+)$ public/api.php?action=del&id=$2 [QSA,L]
#RewriteRule ^post/cities$ public/api.php?action=post&type=$1 [QSA,L]
#RewriteRule ^get/cities$ public/api.php?action=get&type=$1 [QSA,L]

RewriteRule ^(.*)$ public/index.php?g=$1 [QSA,L]